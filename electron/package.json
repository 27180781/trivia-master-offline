{
  "name": "bravo-trivia-client",
  "version": "1.0.0",
  "description": "Bravo Trivia Game - Locked Client Version",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/27180781/trivia-master-offline.git"
  },
  "author": "Bravo Quiz",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.bravo.trivia",
    "productName": "Bravo Trivia",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "../dist/**/*"
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "../public/favicon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "../public/favicon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "../public/favicon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
